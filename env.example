# ============================================
# Banco de Dados
# ============================================
DATABASE_URL="mysql://DB_USER:DB_PASSWORD@localhost:3306/DB_NAME?schema=public"
SHADOW_DATABASE_URL="mysql://root:root@localhost:3306/shadow_db?schema=public"

# Configurações do MariaDB (Docker)
DB_USER=helpdesk_user
DB_PASSWORD=helpdesk_password
DB_NAME=helpdesk
DB_ROOT_PASSWORD=root
DB_PORT=3306

# ============================================
# Autenticação
# ============================================
AUTH_SECRET=your-secret-key-change-in-production-min-32-chars

# ============================================
# Usuário Padrão (para seed)
# ============================================
DEFAULT_USER_EMAIL=admin@example.com
DEFAULT_USER_PASSWORD=admin123
DEFAULT_USER_NAME=Administrador

# ============================================
# Configurações de Email (SMTP) - cPanel Webmail
# ============================================
# Habilitar envio de emails
EMAIL_ENABLED=true

# Servidor SMTP (cPanel)
SMTP_HOST=mail.invicco.com.br
SMTP_PORT=465
SMTP_SECURE=true
# Porta 465 usa SSL/TLS (recomendado)
# Alternativa não-SSL: porta 587 com SMTP_SECURE=false (não recomendado)
# Para outros provedores:
# - Gmail: smtp.gmail.com:587 (secure=false) ou :465 (secure=true)
# - Outlook: smtp-mail.outlook.com:587
# - SendGrid: smtp.sendgrid.net:587
# - Mailgun: smtp.mailgun.org:587
# - Amazon SES: email-smtp.region.amazonaws.com:587

# Credenciais SMTP
SMTP_USER=witchdesk@invicco.com.br
SMTP_PASSWORD=sua-senha-aqui
# Use a senha da conta de email do cPanel

# Email do remetente
EMAIL_FROM=witchdesk@invicco.com.br
EMAIL_FROM_NAME=WitchDesk

# ============================================
# URLs do Sistema
# ============================================
# URL base do sistema (usado em links de email)
APP_URL=http://localhost:3000

# ============================================
# Ambiente
# ============================================
NODE_ENV=development

# ============================================
# Outras Configurações
# ============================================
# Chave de criptografia para arquivos (gerar com: node scripts/generate-encryption-key.js)
ENCRYPTION_KEY=your-encryption-key-here

# ============================================
# Inteligência Artificial Local (Ollama/LocalAI)
# ============================================
# Quando ativado, o Dobby usará o modelo local para humanizar respostas
LOCAL_AI_ENABLED=true
LOCAL_AI_URL=http://localhost:11434
LOCAL_AI_MODEL=llama3
# Tempo máximo em ms para aguardar resposta do modelo (opcional)
LOCAL_AI_TIMEOUT_MS=15000

